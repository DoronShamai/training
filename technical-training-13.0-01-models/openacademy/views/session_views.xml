<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="session_view_list" model="ir.ui.view">
        <field name="name">openacademy.session.list2</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="semester"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>

    <record id="session_view_form" model="ir.ui.view">
        <field name="name">openacademy.session.form</field>
        <field name="model">openacademy.session</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="semester"/>
                        </group>
                        <group>
                            <field name="duration"/>
                            <field name="duration" widget="progressbar"/>
                        </group>
                    </group>
                    <label for="student_ids"/>
                    <field name="student_ids"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="session_action1" model="ir.actions.act_window">
        <field name="name">Sessions</field>
        <field name="res_model">openacademy.session</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>